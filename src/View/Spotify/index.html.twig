{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link
	rel="stylesheet" href="/assets/css/music.css">
	{# <meta http-equiv="Content-Security-Policy" content="frame-ancestors 'self' *spotify.com "> #}
	<meta allow="encrypted-media">

{% endblock %}

{% block content %}

		<form action="
			{% if session is defined %}
				/deconnexion
			{% else %}
				/spotify
			{% endif %}" method="post" id="bouton_spotify">

		<div class="div_spotify_image">
			{% if session is defined %}
				<a href="/deconnexion" class="spotify_image_black deconnexion">

					<img src="/assets/images/deconnexion.png">

				</a>
			{% endif %}

			{% if session is not defined %}

				<button class="spotify_image_black">
					<img onmouseover='passageDeLaSouris(this)' onmouseout='departDeLaSouris(this)' id="black" src="/assets/images/black-spotify.png">
				</button>
				<img class="arrow_spotify" src="/assets/images/up.png">
			{% endif %}
		</div>
	</form>
	<a href="/help">
		<div class="div_question_image">
			<div class="question_image_black">
				<img onmouseover='passageSouris(this)' onmouseout='departSouris(this)' id="question" src="/assets/images/question-noire.png">
			</div>
		</div>
	</a>

	<div class="logo">
		<a href="/">
			<img class="logo_image" src="/assets/images/RunInWild-orange.png">
		</a>
	</div>
	<div class="frame_spotify image">
		<a href="#"><img class="arrow" src="/assets/images/back.png"></a>
		<iframe class="frame" src="https://open.spotify.com/embed/playlist/{{id}}?utm_source=generator" width="60%" height="200" frameborder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
		{# <iframe id="track" class="frame" src="" width="60%" height="200" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe> #}
		<a href="#"><img class="arrow" src="/assets/images/next.png"></a>
	</div>
	<div class="div_orange">
		<div class="target_speed">
			<p>Target Speed</p>
			<input type="text" id="target-speed" name="target-speed" {% if target is defined %} value="{{target}}" {% endif %}>
		</div>
		<div class="vitesse">
			<button id="record-button">RECORD</button>
			{# <p>Last speed in interval:
																									<span id="last-speed"></span>
																								</p> #}
		</div>
	</div>


{% endblock %}
{% block javascript %}
	<script src="https://sdk.scdn.co/spotify-player.js"></script>
	<script src="/assets/js/webPlayback.js"></script>
	<script src="/assets/js/music_main.js"></script>
	<script src="/assets/js/Player.js"></script>
	<script src="/assets/js/style.js"></script>
{% endblock %}
